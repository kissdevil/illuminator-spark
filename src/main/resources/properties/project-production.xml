<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
  <comment>searchmaterialization 프로젝트 설정 - production</comment>

  <!-- add 16 bytes key for global session encryption -->
  <!-- <entry key="globalsession.encryption.key"></entry> -->
  <entry key="globalsession.timeout.seconds">1800</entry> <!-- default 30 minutes -->

  <entry key="search-materialization.debug.cache">false</entry>

  <entry key="search-materialization.redis.item.sentinel.addresses">10.211.115.157,10.211.114.32,10.211.115.239</entry>
  <entry key="search-materialization.redis.vi.sentinel.addresses">10.211.115.186,10.211.114.252,10.211.115.102</entry>
