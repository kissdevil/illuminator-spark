  <entry key="search-materialization.redis.pool.max.wait.millis">1000</entry>

  <entry key="get.aws.ec2.ip.url">http://169.254.169.254/latest/meta-data/instance-id</entry>

  <entry key="monitoring.graphite.url">http://collect.metric.coupang.net:9880/metric</entry>

